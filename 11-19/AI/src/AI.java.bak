import javax.microedition.lcdui.*;
import javax.microedition.midlet.*;
import java.io.*;

public class AI extends MIDlet
{ 
	Display display;
	MainCanvas mc;
	public AI(){
		display=Display.getDisplay(this);
		mc=new MainCanvas();
		display.setCurrent(mc);
	}
	public void startApp(){
	}
	public void destroyApp(boolean unc){
	}
	public void pauseApp(){
	}
}
class MainCanvas extends Canvas
{
	int leftFlag,rightFlag,upFlag,downFlag;
	int x,y;
	Image heroLeftImg[]=new Image[3];
	Image heroLeftImg[]=new Image[3];
	Image heroLeftImg[]=new Image[3];
	Image heroLeftImg[]=new Image[3];
	Image currentImg;
	public MainCanvas(){
		try
		{
			//左
			for(int i=0;i<3;i++){
				heroLeftImg[i]=Image.createImage("/sayo"+i+"2.png");
			}
			
			
			//右
			for(int i=0;i<3;i++){
				heroRightImg[i]=Image.createImage("/sayo"+i+"6.png");
			}
			

			//上
			for(int i=0;i<3;i++){
				heroUpImg[i]=Image.createImage("/sayo"+i+"4.png");
			}
			

			//下
			for(int i=0;i<3;i++){
				heroDownImg[i]=Image.createImage("/sayo"+i+"0.png");
			}
			
			currentImg=heroDownImg[1];
			x=120;
			y=100;
			leftFlag=1;
			rightFlag=1;
			upFlag=1;
			downFlag=1;
		}
		catch (IOException e)
		{
			e.printStackTrace();
		}
	}
	public void paint(Graphics g){
		g.setColor(0,0,0);
		g.fillRect(0,0,getWidth(),getHeight());
		g.drawImage(currentImg,x,y,0);
	}
	public void keyPressed(int keyCode){
		int action=getGameAction(keyCode);
		if (action==LEFT){
			if(leftFlag==1){
				currentImg=heroLeftImg[0];
				leftFlag++;
			}
			else if(leftFlag==2){
				currentImg=heroLeftImg[2];
				leftFlag=1;
			}
			x=x-1;
			System.out.println("向左转");
				
		}
		if (action==RIGHT){
			if(rightFlag==1){
				currentImg=heroRightImg[0];
				rightFlag++;
			}
			else if(leftFlag==2){
				currentImg=heroRightImg[2];
				rightFlag=1;
			x=x+1;
			System.out.println("向右转");
			}
		}
		if (action==UP){
			if(upFlag==1){
				currentImg=heroUpImg[0];
				upFlag++;
			}
			else if(upFlag==2){
				currentImg=heroUpImg[2];
				upFlag=1;
			}
			y=y-1;
			System.out.println("向上转");
				}
		if (action==DOWN){
			if(downFlag==1){
				currentImg=heroDownImg[0];
				downFlag++;
			}
			else if(downFlag==2){
				currentImg=heroDownImg[2];
				downFlag=1;
			}
			y=y+1;
			System.out.println("向下转");
			}	
		repaint();
		}
	}
	
	

